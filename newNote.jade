.note__card.mdl-card.mdl-shadow--4dp
  form.newNote
    .error__message
      span
    .note__card__progress.mdl-progress.mdl-js-progress.mdl-progress__indeterminate
    .mdl-card__title
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        input#new-note__title.mdl-textfield__input(type='text',name='title')
        label.mdl-textfield__label(for='new-note__title') Title
    .mdl-card__supporting-text
      .mdl-textfield.mdl-js-textfield
        textarea#sample5.mdl-textfield__input(type='text', rows='3', name='content')
        label.mdl-textfield__label(for='sample5') Note Text
    .mdl-card__actions
      button.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect
        i.material-icons save
        | Save
